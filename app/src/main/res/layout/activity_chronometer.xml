<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/chronometerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Epilepsy Chronometer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/startChronometerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Chronometer"
        android:layout_below="@id/chronometerTitle"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/stopChronometerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Chronometer"
        android:layout_below="@id/startChronometerButton"
        android:layout_marginTop="20dp" />

</RelativeLayout>
